
@{
    ViewBag.Title = "UsersList";
}

<h2>@ViewBag.Title</h2>

@foreach (var user in ViewBag.Users)
{
    <h2>@user.Item2</h2>
    <h2>@user.Item3</h2>

    if (@user.Item3 == "")
    {
    <form method="post" action="/Account/GiveRights/@user.Item1">
        @Html.HttpMethodOverride(HttpVerbs.Put)

        <select name="roles">
            <option value="User">User</option>
            <option value="Editor">Editor</option>
            <option value="Administrator">Administrator</option>
        </select>

        <button class="btn btn-revoke-rights" type="submit">Give rights back</button>
    </form>
    }
    else
    {
        <form method="post" action="/Account/RevokeRights/@user.Item1">
            @Html.HttpMethodOverride(HttpVerbs.Put)

            <button class="btn btn-revoke-rights" type="submit">Revoke rights</button>
        </form>
    }

    <br />
    <hr />
    <br />
}
<br />
